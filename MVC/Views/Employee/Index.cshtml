<!-- Index.cshtml -->
@model List<EmployeeModel>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.ID</td>
                <td>@employee.Name</td>
                <td>@employee.Address</td>
                <td>@(employee.Department != null ? employee.Department.Dept_Name : "Unknown")</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
